        print('*  0.退出                                                         *')
        print('*                                                                 *')
        print('*                                             Version:1.0         *')
        print('*                                        Create by Huanghaiyang   *')
        print('===================================================================')
        print('\n')
        print('请输入命令编号')

        cmd_no = input('Please input command No:')

        if cmd_no == '1':
            importExcel()
            os.system("pause")
            # sys.exit()
        if cmd_no == '2':
            query_all(1)
            os.system("pause")
            # sys.exit()
        if cmd_no == '3':
            query_basic_info()
            os.system("pause")
            # sys.exit()
        if cmd_no == '99':
            delteData()
